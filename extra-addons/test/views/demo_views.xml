<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_test_demo_tree" model="ir.ui.view">
        <field name="name">test.demo.tree</field>
        <field name="model">test.demo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="desc"/>
            </tree>
        </field>
    </record>

    <record id="view_test_demo_form" model="ir.ui.view">
        <field name="name">test.demo.form</field>
        <field name="model">test.demo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="desc"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_test_root" name="测试模块"/>
    <menuitem id="menu_test_demo" name="测试数据" parent="menu_test_root" action="action_test_demo"/>

    <record id="action_test_demo" model="ir.actions.act_window">
        <field name="name">测试数据</field>
        <field name="res_model">test.demo</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>