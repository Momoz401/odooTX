<odoo>
    <record id="view_plant_batch_list" model="ir.ui.view">
        <field name="name">plant.batch.list</field>
        <field name="model">plant.batch</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="category"/>
                <field name="area"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="manager_id"/>
            </list>
        </field>
    </record>

    <record id="view_plant_batch_form" model="ir.ui.view">
        <field name="name">plant.batch.form</field>
        <field name="model">plant.batch</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="category"/>
                        <field name="area"/>
                    </group>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="manager_id"/>
                    </group>
                    <field name="remark"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_plant_batch" model="ir.actions.act_window">
        <field name="name">批次表</field>
        <field name="res_model">plant.batch</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_plant_batch_root" name="批次管理" sequence="10"/>
    <menuitem id="menu_plant_batch" name="批次表" parent="menu_plant_batch_root" action="action_plant_batch" sequence="10"/>
</odoo>